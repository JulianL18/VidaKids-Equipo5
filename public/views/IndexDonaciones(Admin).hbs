<!DOCTYPE html>
<html lang="en">

{{!-- CSS: Donaciones --}}
<link rel="stylesheet" href="../css/Donaciones/indexDonaciones(Admin).css">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="../images/VidaKids-logo.jpg">
    <link rel="stylesheet" href="../css/servicios.css">
    <title>FunaVid | Donaciones(Admin)</title>

    {{>header}}

    <script src="https://kit.fontawesome.com/4f9a5a98e3.js" crossorigin="anonymous"></script>

    <!-- links para exportar a excel -->
    <script src="https://unpkg.com/xlsx@0.16.9/dist/xlsx.full.min.js"></script>
    <script src="https://unpkg.com/file-saverjs@latest/FileSaver.min.js"></script>
    <script src="https://unpkg.com/tableexport@latest/dist/js/tableexport.min.js"></script>



</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="index.html" class="site_title"><img src="../images/VidaKids-logo.jpg" alt=""
                                class="fotito"> <span>FunaVid</span></a>
                    </div>


                    <div class="clearfix"></div>


                    {{>head}}

                    <!-- page content -->
                    <div class="right_col" role="main">
                        <section>
                            <div class="titulo_p">
                                <h1>Gestion de Donaciones</h1>
                            </div>

                        </section>
                        <section class="search_icon">
                            <div class="contBuscar">
                                <form class="form-inline my-2 my-lg-0" onsubmit="search(event)">
                                    <div>
                                        <input class="form-control" type="search" placeholder="Search"
                                            aria-label="Search">
                                    </div>
                                    <div class="btn-search">
                                        <button class="btn btn-outline-warning my-2 my-sm-0" type="submit"><img
                                                src="../images/bx-search-alt.svg" alt=""></button>
                                    </div>
                                </form>
                            </div>

                        </section>


                        <main>
                            <div class="tabla">
                                <table id="tblData" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Nombre completo</th>
                                            <th scope="col">Donación</th>
                                            <th scope="col">Cantidad</th>
                                            <th scope="col">Fecha de donación</th>
                                            <th scope="col" class="th_center">Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>
                            </div>
                            <div class="pagination" id="pagination">
                                <button type="submit" class="botonp" name="" id="prevPage">Anterior</button>
                                <div class="numerito">
                                    <span id="currentPage">
                                        <h6 id="paginado">1</h6>
                                    </span>
                                </div>
                                <button type="submit" class="botonp" name="" id="nextPage">Siguiente</button>

                            </div>
                            <div class="dow_excel">
                                <button onclick="exportAllDataToExcel('tblData')" class="botonexportar">
                                    <i class="fa-solid fa-file-arrow-down" style="color: #0f84c3;"
                                        style="width: 50px;"></i>
                                </button>
                            </div>
                        </main>

                        <dialog id="modal2">
                            <div class="modal2">
                                <div class="modal2-content">
                                    <!-- Formulario -->
                                    <div class="formulario2">
                                        <form id="form2" action="" method="post" enctype="multipart/form-data"
                                            onsubmit="return visualizarDonante())" class="form-modal">
                                            <div class="formulario_bloque-uno">

                                                <div class="input-control">
                                                    <label for="text">Nombre completo</label>
                                                    <input type="text" name="" id="nombre" placeholder="disabled"
                                                        disabled="true">
                                                    <div class="error"></div>
                                                </div>

                                                <div class="input-control">
                                                    <label for="text">Donación</label>
                                                    <input type="text" name="" id="donacion" placeholder="disabled"
                                                        disabled="true">
                                                    <div class="error"></div>
                                                </div>

                                                <div class="input-control">
                                                    <label for="text">Tipo donación</label>
                                                    <input type="text" name="" id="tipoDonacion" placeholder="disabled"
                                                        disabled="true">
                                                    <div class="error"></div>
                                                </div>

                                                <div class="input-control">
                                                    <label for="text">Cantidad</label>
                                                    <input type="text" name="" id="cantidad" placeholder="disabled"
                                                        disabled="true">
                                                    <div class="error"></div>
                                                </div>

                                                <div class="input-control">
                                                    <label for="text">Fecha de donación</label>
                                                    <input type="text" name="" id="fechaDonacion" placeholder="disabled"
                                                        disabled="true">
                                                    <div class="error"></div>
                                                </div>

                                                <div class="input-control">
                                                    <label for="text">Fecha del registro de donación</label>
                                                    <input type="text" name="" id="fechaRegistro" placeholder="disabled"
                                                        disabled="true">
                                                    <div class="error"></div>
                                                </div>

                                            </div>

                                    </div>
                                    <input type="button" value="Salir" class="btn btn-danger" id="btn-cerrar-modal">
                                    </form>
                                </div>
                            </div>
                        </dialog>
                    </div>

                    <dialog id="modal1">
                        <div class="modal1">
                            <div class="modal2-content">
                                <!-- Formulario -->
                                <div class="formulario1">
                                    <form id="form1" action="" method="post" enctype="multipart/form-data"
                                        onsubmit="return visualizarDonante())" class="form-modal">
                                        <div class="formulario_bloque-uno">

                                            <label for="cambiarEstado">Cambiar de estado</label>
                                            <select name="cambiardEstado" id="cambiarEstado">
                                                <option value="">En proceso</option>
                                                <option value="1">Aceptada</option>
                                                <option value="2">Denegada</option>
                                            </select>

                                        </div>

                                </div>
                                <input type="button" value="Guardar" class="btn btn-success" id="btn-cerrar-modal" onclick="cambioEstado()">
                                </form>
                            </div>
                        </div>
                    </dialog>

                    </main>
                </div>
                <!-- /page content -->


                <!-- footer content -->
                <footer>
                    <div class="pull-right">
                        Software VidaKids® - Derechos by SENA
                        <br>
                        Teléfono: 40000000 | Correo: dksahdhhasjdksa@funavid.com
                    </div>
                    <div class="clearfix"></div>
                </footer>
                <!-- /footer content -->
            </div>
        </div>
        <!--exportar datos a excel-->
        <script src="../js/export-excel.js"></script>
        <!--mensaje de guardado-->
        <script src="../js/alerts/guardado_s.js"></script>
        <!--alerta-->
        <script src="../js/alerts/delete.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <!--js-->
        <script src="../js/registro_servicio.js"></script>
        <!--Boxicon-->
        <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>


        <!-- jQuery -->
        <script src="../vendors/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="../vendors/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <!-- FastClick -->
        <script src="../vendors/fastclick/lib/fastclick.js"></script>
        <!-- NProgress -->
        <script src="../vendors/nprogress/nprogress.js"></script>
        <!-- Chart.js -->
        <script src="../vendors/Chart.js/dist/Chart.min.js"></script>
        <!-- jQuery Sparklines -->
        <script src="../vendors/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
        <!-- morris.js -->
        <script src="../vendors/raphael/raphael.min.js"></script>
        <script src="../vendors/morris.js/morris.min.js"></script>
        <!-- gauge.js -->
        <script src="../vendors/gauge.js/dist/gauge.min.js"></script>
        <!-- bootstrap-progressbar -->
        <script src="../vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
        <!-- Skycons -->
        <script src="../vendors/skycons/skycons.js"></script>
        <!-- Flot -->
        <script src="../vendors/Flot/jquery.flot.js"></script>
        <script src="../vendors/Flot/jquery.flot.pie.js"></script>
        <script src="../vendors/Flot/jquery.flot.time.js"></script>
        <script src="../vendors/Flot/jquery.flot.stack.js"></script>
        <script src="../vendors/Flot/jquery.flot.resize.js"></script>
        <!-- Flot plugins -->
        <script src="../vendors/flot.orderbars/js/jquery.flot.orderBars.js"></script>
        <script src="../vendors/flot-spline/js/jquery.flot.spline.min.js"></script>
        <script src="../vendors/flot.curvedlines/curvedLines.js"></script>
        <!-- DateJS -->
        <script src="../vendors/DateJS/build/date.js"></script>
        <!-- bootstrap-daterangepicker -->
        <script src="../vendors/moment/min/moment.min.js"></script>
        <script src="../vendors/bootstrap-daterangepicker/daterangepicker.js"></script>


        <!-- Custom Theme Scripts -->
        <script src="../build/js/custom.min.js"></script>

        <!-- Script: Donaciones -->
        <script src="../js/Donaciones/indexDonaciones(Admin).js"></script>

</body>

</html>